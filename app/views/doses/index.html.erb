<div class="who">
  <div class="when">

    <ul>
      <% @doses.each do |dose| %>
      <li>
        <%= dose.cocktail.name %>
        <%= dose.description %>
        <%= dose.ingredient.name %>
        <%= link_to "Delete", dose_path(dose),
              method: :delete,
              data: { confirm: "Are you sure?" } %>
      </li>
      <% end %>
    </ul>
  </div>
</div>
