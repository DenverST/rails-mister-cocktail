<div class="who">
  <div class="when">

    <div class="how">
      <h1> <%= @bar.name %></h1>
      <ul id="otis">
      <% @bar.cocktails.each do |cocktail| %>
        <li>
          <h4>
            <%= cl_image_tag(cocktail.photo,
                  width: 75, height: 75, crop: :thumb )%>
            <%= link_to cocktail.name, cocktail_path(cocktail) %>
          </h4>
          <ul>
            <% cocktail.doses.each do |dose| %>
              <li>
                <%= dose.description  %>
                <%= dose.ingredient.name %>
              </li>
            <% end  %>
          </ul>
        </li>
      <% end %>
        <li>
          <%=  link_to "Add Cocktail", new_bar_cocktail_path(@bar) %>
        </li>

      </ul>
      <%= link_to "See other bars", bars_path %>
      <%= link_to "Return home", cocktails_path %>
    </div>
  </div>
</div>
