<div class="who">
  <div class="when">

    <%= @cocktail.name %>

    <ul>
    <% @cocktail.doses.each do |dose| %>
      <li>
        <%= dose.description %>
        <%= dose.ingredient.name %>

      </li>
    <% end %>
    </ul>

    <%=  link_to "Add Dose", new_cocktail_dose_path(@cocktail) %>

    <%= link_to "Delete", cocktail_path(@cocktail),
          method: :delete,
          data: { confirm: "Are you sure?" } %>
  </div>
</div>
